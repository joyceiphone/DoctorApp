@page
@model DoctorApp.Pages.Patients.IndexModel
@{
}

<div class="p-3 mb-2 bg-secondary text-white">
	<form method="post">
		<div class="d-flex align-items-center justify-content-around">
			<div class="form-group d-flex mr-2 align-items-center">
				<label class="text-nowrap px-1">Last Name:</label>
				<input asp-for="FirstName" class="form-control" />
			</div>
			<div class="form-group d-flex mr-2 align-items-center">
				<label class="text-nowrap px-1">First Name:</label>
				<input asp-for="LastName" class="form-control" />
			</div>
			<div class="form-group d-flex mr-2 align-items-center">
				<label class="text-nowrap px-1">DOB:</label>
				<input asp-for="BirthDate" class="form-control" placeholder="yyyy-mm-dd" />
			</div>
			<div class="form-group d-flex mr-2 align-items-center">
				<label class="text-nowrap px-1">Patient ID:</label>
				<input asp-for="PatientId" class="form-control"/>
			</div>
			<div class="d-flex align-items-center">
				<button class="btn btn-light p-2 mx-1" id="search">Search</button>
				<button class="text-nowrap btn btn-primary py-2 px-3 mx-1" id="add">Add Patient</button>
			</div>
		</div>
	</form>
</div>

<table class="table table-striped table-responsive table-hover full-width-table">
	<thead>
		<tr>
			<th></th>
			<th>ID</th>
			<th>Family Name</th>
			<th>Given Name</th>
			<th>Birth Date</th>
			<th>Gender</th>
			<!-- Add more columns as needed -->
		</tr>
	</thead>
	<tbody>
		@foreach (var patient in Model.PatientList)
		{
			<tr>
				<td><input type="radio" name="selectedPatient" value="@patient.Id" /></td>
				<td>@patient.Id</td>
				<td>@patient.Name.FirstOrDefault()?.Family</td>
				<td>@patient.Name.FirstOrDefault()?.Given.FirstOrDefault()</td>
				<td>@patient.BirthDate</td>
				<td>@patient.Gender</td>
				<!-- Add more columns as needed -->
			</tr>
		}
	</tbody>
</table>