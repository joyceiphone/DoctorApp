@page
@model DoctorApp.Pages.Doctors.DeleteModel
@{
	ViewData["title"] = "Delete";
}

<h3>@ViewData["title"]</h3>
<hr />

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label asp-for="JoinedResults.DrFName" class="control-label"></label>
				<input asp-for="JoinedResults.DrFName" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="JoinedResults.DrLName" class="control-label"></label>
				<input asp-for="JoinedResults.DrLName" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="JoinedResults.SpecialityName" class="control-label"></label>
				<input asp-for="JoinedResults.SpecialityName" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="InsuranceCompanies" class="control-label"></label>
				<div>
					@for (int i = 0; i < Model.InsuranceCompanies.Count; i++)
					{
						<span><b>@Model.InsuranceCompanies[i]</b></span>
						@if (i < Model.InsuranceCompanies.Count - 1)
						{
							<span><b>,</b> </span>
						}
					}
				</div>
			</div>
			@if (Model != null && Model.Addresses.Any())
			{
				@foreach (var address in Model.Addresses)
				{
					<div class="form-group">
						<label asp-for="@address.Street1" class="control-label"></label>
						<input asp-for="@address.Street1" readonly class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="@address.Street2" class="control-label"></label>
						<input asp-for="@address.Street2" readonly class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="@address.ZipCode" class="control-label"></label>
						<input asp-for="@address.ZipCode" readonly class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="@address.City" class="control-label"></label>
						<input asp-for="@address.City" readonly class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="@address.State" class="control-label"></label>
						<input asp-for="@address.State" readonly class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="@address.TelAddress" class="control-label"></label>
						<input asp-for="@address.TelAddress" readonly class="form-control" />
					</div>
					<div class="form-group">
						<label asp-for="@address.FaxAddress" class="control-label"></label>
						<input asp-for="@address.FaxAddress" readonly class="form-control" />
					</div>
				}
			}
			<div class="form-group">
				<label asp-for="JoinedResults.EmailPersonal" class="control-label"></label>
				<input asp-for="JoinedResults.EmailPersonal" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="JoinedResults.EmailWork" class="control-label"></label>
				<input asp-for="JoinedResults.EmailWork" readonly class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="JoinedResults.PersonalCell" class="control-label"></label>
				<input asp-for="JoinedResults.PersonalCell" readonly class="form-control" />
			</div>
			<div class="form-group mt-2">
				<input type="submit" value="Delete" class="btn btn-primary" />
				<a class="btn btn-success" asp-page="Index">Insurance Companies List</a>
			</div>
		</form>
	</div>
</div>
